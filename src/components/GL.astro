---
// Simulamos algunas imágenes para el ejemplo
const cards = [
  { id: 1, color: "#FF6B6B", img: "https://picsum.photos/id/10/600/800" },
  { id: 2, color: "#4ECDC4", img: "https://picsum.photos/id/20/600/800" },
  { id: 3, color: "#FFE66D", img: "https://picsum.photos/id/30/600/800" },
  { id: 4, color: "#1A535C", img: "https://picsum.photos/id/40/600/800" },
];
---

<section class="stack-container">
  <div class="cards-wrapper">
    {cards.map((card, index) => (
      <div class="card" style={`z-index: ${cards.length - index}; background-image: url(${card.img})`}>
        <div class="card-content">
          <h3>Tarjeta {card.id}</h3>
        </div>
      </div>
    ))}
  </div>
</section>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const container = document.querySelector(".stack-container");
  const cards = gsap.utils.toArray(".card") as HTMLElement[];

  // Configuración inicial: escalamos las tarjetas traseras para dar efecto de profundidad
  gsap.set(cards, {
    y: (i) => i * 15, // Desplazamiento vertical ligero para ver las de atrás
    scale: (i) => 1 - i * 0.05, // Las de atrás son más pequeñas
    transformOrigin: "center top",
  });

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: ".stack-container",
      start: "top top", // Empieza cuando el contenedor toca el top
      end: `+=${cards.length * 100}%`, // La duración del scroll depende de cuántas cartas haya
      pin: true, // "Grapamos" el contenedor
      scrub: 1, // Suavizamos el movimiento vinculado al scroll
      // markers: true, // Descomenta para depurar
    },
  });

  // Animación del Stack
  cards.forEach((card, i) => {
    // No animamos la última tarjeta para que se quede fija al final
    if (i === cards.length - 1) return;

    tl.to(card, {
      yPercent: -120, // La tarjeta sale hacia arriba
      opacity: 0,     // Se desvanece
      rotation: Math.random() * 10 - 5, // Rotación aleatoria sutil al salir
      duration: 1,
      ease: "power2.inOut"
    })
    // Al mismo tiempo, traemos el resto de tarjetas hacia el frente
    .to(cards.slice(i + 1), {
      y: (index) => index * 15, // Recalculamos posición stack
      scale: (index) => 1 - index * 0.05, // Recalculamos escala
      duration: 1,
      ease: "power2.inOut"
    }, "<"); // El "<" sincroniza esta animación con la anterior
  });

</script>

<style>
  .stack-container {
    width: 100%;
    height: 100vh; /* Ocupa toda la pantalla */
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #111; /* Color de fondo */
    overflow: hidden;
  }

  .cards-wrapper {
    position: relative;
    width: 350px;
    height: 500px;
  }

  .card {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 20px; /* Bordes redondeados */
    background-size: cover;
    background-position: center;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: flex-end;
    overflow: hidden;
    /* Borde sutil para separar tarjetas oscuras */
    border: 1px solid rgba(255,255,255,0.1); 
    will-change: transform, opacity;
  }

  .card-content {
    width: 100%;
    padding: 20px;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
  }

  h3 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: bold;
  }
</style>