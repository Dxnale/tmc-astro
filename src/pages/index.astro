---
import Layout from "../layouts/Layout.astro";
import HeroHome from "../components/HeroHome.astro";
import TextMarquee from "../components/TextMarquee.astro";
import GalleryText from "../components/GalleryText.astro";
import ImageMarquee from "../components/ImageMarquee.astro";
import Faqs from "../components/Faqs.astro";
import StepsTimeline from "../components/StepsTimeline.astro";
import Plans from "../components/Plans.astro";
import Statements from "../components/Statements.astro";
import Introducing from "../components/Introducing.astro";
import GL from "../components/GL.astro";

import logo1 from "../assets/logoipsum-344.svg";
import logo2 from "../assets/logoipsum-350.svg";
import logo3 from "../assets/logoipsum-345.svg";
import logo4 from "../assets/logoipsum-385.svg";
import logo5 from "../assets/logoipsum-375.svg";
import logo6 from "../assets/logoipsum-378.svg";
import logo7 from "../assets/logoipsum-346.svg";
import logo8 from "../assets/logoipsum-331.svg";
---

<Layout title="Home">
  <div id="hero-steps-wrapper">
    <div class="content-layer">
      <HeroHome
        transparentBg
        title="Jesús hace toda la diferencia!"
        subtitle="Jesús dijo: “Dejen que los niños vengan…” Marcos 10:13-16"
        cta={{
          title: "Conoce más",
          url: "#",
        }}
      />
      <StepsTimeline
        title="Los niños son el presente de las misiones"
        items={[
          {
            title: "Son los más fructíferos",
            text: "60-85% de los cristianos vinieron a Cristo como niños.",
          },
          {
            title: "Son la mayoría de los no alcanzados",
            text: "Solo el 15% de los recursos se destinan a llegar a los niños.",
          },
          {
            title: "Los niños tienen toda su vida para vivir para el Señor",
            text: "Al llegar a Cristo de niños, pueden vivir toda su vida para el Señor, impactando a generaciones futuras.",
          },
        ]}
      />
    </div>
    <GL />
  </div>

  <Introducing
    title="Nuestra misión"
    text="Es ganar a los niños y jóvenes del mundo para Cristo; ayudarlos a alcanzar su madurez espiritual, nutrirlos a través de cursos bíblicos en sus iglesias locales. Esto se logra por medio de un ministerio directo con las iglesias y multiplicando nuestros esfuerzos a través de asociaciones claves en todo el mundo."
    cta={{
      title: "Leer más",
      url: "#",
    }}
  />
  <GalleryText
    title="Lo que hacemos"
    text="The Mailbox Club facilita la traducción, producción y distribución de lecciones bíblicas en todo el mundo para personas de todas las edades, con especial énfasis en niños y jóvenes. Llegamos a muchos más niños de manera efectiva al asociarnos con ministerios estratégicos, que incluyen la iglesia local. Apoyamos a nuestros socios ministeriales capacitándolos adecuadamente y compartiendo las mejores prácticas que hemos aprendido durante casi 50 años de ministerio de seguimiento."
    cta={{
      title: "Leer más",
      url: "#",
    }}
    images={[
      {
        alt: "Children",
        src: "/image-1.webp",
        width: 1200,
        height: 1200,
      },
      {
        alt: "Project collaboration view",
        src: "/image-2.jpg",
        width: 2689,
        height: 4032,
      },
      {
        alt: "Analytics and reporting",
        src: "/image-3.jpg",
        width: 3734,
        height: 5359,
      },
    ]}
    marqueeTexts={[
      "Publicamos",
      "Distribuimos",
      "Entrenamos",
      "Ellos enseñan",
    ]}
  />

  <Statements
    items={[
      {
        title: "For modern teams",
        text: "Every feature is designed to reduce complexity and maximize execution speed.",
      },
      {
        title: "Scales as you grow",
        text: "Whether you’re a solo creator or a global team, the platform adapts to your workflow.",
      },
      {
        title: "Real outcomes",
        text: "Less busywork, more progress—so you can deliver meaningful results consistently.",
      },
    ]}
  />

  <TextMarquee
    class="marquee"
    texts={[
      "Creative Firepower",
      "Built for Speed",
      "Trusted by Professionals",
      "Simple, Transparent Pricing",
    ]}
  />

  <Plans
    title="Plans & Pricing"
    subtitle="Start for free, upgrade when you’re ready. No hidden fees, no long-term commitments."
    items={[
      {
        title: "Free Plan",
        price: {
          amount: "$0",
          duration: "month",
        },
        link: {
          title: "Get Started Free",
          url: "#",
        },
        features: [
          { title: "Up to 50 accounts" },
          { title: "Unlimited projects" },
          { title: "Chat support", disabled: true },
          { title: "Email support", disabled: true },
          { title: "Custom onboarding", disabled: true },
        ],
      },
      {
        title: "Premium Plan",
        price: {
          amount: "$20",
          duration: "month",
        },
        link: {
          title: "Start 14-Day Trial",
          url: "#",
        },
        features: [
          { title: "Up to 50 accounts" },
          { title: "Unlimited projects" },
          { title: "Priority chat support" },
          { title: "Email support" },
          { title: "Custom onboarding assistance" },
        ],
      },
    ]}
  />

  <Faqs
    title="Frequently Asked Questions"
    mobileTitle="FAQs"
    subtitle="Quick answers to the most common questions."
    items={[
      {
        question: "Who is this platform for?",
        answer:
          "It’s built for creators, startups, agencies, and teams who want to move faster without sacrificing quality or control.",
      },
      {
        question: "Can I upgrade or downgrade at any time?",
        answer:
          "Yes. You can change plans whenever you need, with no penalties or long-term contracts.",
      },
      {
        question: "Does the free plan really cost nothing?",
        answer:
          "Absolutely. The free plan gives you full access to core features so you can evaluate the platform with confidence.",
      },
      {
        question: "Is my data secure?",
        answer:
          "Yes. We use industry-standard security practices to protect your data and ensure reliability.",
      },
      {
        question: "Do you offer support during onboarding?",
        answer:
          "Premium users receive guided onboarding and priority support to ensure a smooth start.",
      },
    ]}
  />

  <ImageMarquee
    images={[
      {
        src: logo1.src,
        alt: "Logo 1",
      },
      {
        src: logo3.src,
        alt: "Logo 3",
      },
      {
        src: logo4.src,
        alt: "Logo 4",
      },
      {
        src: logo8.src,
        alt: "Logo 8",
      },
      {
        src: logo5.src,
        alt: "Logo 5",
      },
      {
        src: logo6.src,
        alt: "Logo 6",
      },
      {
        src: logo2.src,
        alt: "Logo 2",
      },
      {
        src: logo7.src,
        alt: "Logo 7",
      },
    ]}
  />
</Layout>

<style>
  .marquee {
    padding: 2rem 0;
    z-index: 9;
  }

  #hero-steps-wrapper {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr;

  }

  .content-layer {
    grid-area: 1 / 1;
    position: relative;
    z-index: 2;
  }

  #hero-steps-wrapper > :global(.stack-container) {
    grid-area: 1 / 1;
    z-index: 0;
  }
</style>
